extends layout

block content
  h1= title
  p This will make your essay better.
  form(action="essayParse", method="post" enctype='application/x-www-form-urlencoded')
    div(class="form-group")
      textarea(type="text" class="form-control input-large" placeholder="Put essay here to pass ELPE" id="inputTxt" name="inputTxt")
    input(type="submit" class="btn btn-default" value="Make it longer" name="firstBtn")
    input(type="submit" class="btn btn-default" value="Make it funner" name="secondBtn")
